<% content_for :breadcrumbs do %>
	<span class="breadcrumb-item active">Minha Empresa</span>	
<% end %>

<% content_for :titulo do %>
	<div class="sh-pagetitle-icon"><i class="fa fa-industry"></i></div>
	<div class="sh-pagetitle-title">
	  <span></span>
	  <h2>Minha Empresa</h2>
	</div><!-- sh-pagetitle-left-title -->
<% end %>

<%= simple_form_for @empresa, url: home_atualizar_empresa_path, method: :put do |f| %> 
  <div class="form-layout">
    <div class="row mg-b-25">
      <div class="col-lg-6">
        <div class="form-group">
          <%= f.input :nome, label: "Nome/Razão Social", required: true, placeholder: "Digite o nome ou a Razão", input_html: {class: "form-control"} %>
        </div>
      </div><!-- col-6 -->
      <div class="col-lg-6">
        <div class="form-group">
          <%= f.input :cnpj, placeholder: "CNPJ", input_html: {class: "form-control"} %>
        </div>
      </div><!-- col-2 -->
      <div class="col-lg-6">
        <%= f.input :area, collection: array_area_atuacao, as: :select, label: "Area de Atuação", include_blank: true, :input_html => {class: "form-control"} %>
      </div>

      <div class="col-lg-2">
        <div class="form-group">
          <%= f.input :estado, collection: array_estados_do_brasil, as: :select, label: "Estado", include_blank: true, :input_html => {:class=>"form-control"} %>
        </div>
      </div><!-- col-2 -->
      <div class="col-lg-2">
        <div class="form-group">
          <%= f.input :cep, placeholder: "CEP", input_html: {class: "form-control"} %>
        </div>
      </div><!-- col-2 -->

      <div class="col-lg-2">
        <div class="form-group">
          <%= f.input :numero, placeholder: "Numero", input_html: {class: "form-control"} %>
        </div>
      </div><!-- col-2 -->
    </div><!-- row -->
    <div class="form-layout-footer">
      <button type="submit" class="btn btn-success mg-r-5">
          <i class="fa fa-save"></i> Salvar
      </button>
    </div><!-- form-layout-footer -->
  </div><!-- form-layout -->  
<% end %>