<% flash.each do |key, value| %>
	<% if value != "" %>
	  <div class="<%= flash_class(key) %>">
	    <%= value %>
	    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
	      <span aria-hidden="true">&times;</span>
	    </button>    
	  </div>
	<% end %>
<% end %>
<% flash[:success] = "" %>
<% flash[:error] = "" %>
<% flash[:notice] = "" %>
 